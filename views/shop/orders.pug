extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="styles/orders.css")

block content
  main.cart
    if orders.length > 0
      ul.orders 
        each order in orders
          li.orders__item
            h1.order__id Order ##{order._id}
            ul.orders__products 
              each p in order.products 
                li.orders__products-item #{p.product.title}: #{p.quantity}
    else 
      h2 Here is your Orders! Now there isn't any thing...